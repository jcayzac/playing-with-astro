{
  "extends": "astro/tsconfigs/base",
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "importsNotUsedAsValues": "error",
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@stores/*": ["src/stores/*"],
      "@styles/*": ["src/styles/*"]
    },
    "types": [
      "@astrojs/image/client"
    ],
    "strict": true
  }
}
